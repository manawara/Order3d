generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  status        Status    @default(inactive)
  role          Role      @default(USER)
  uid           Int       @default(autoincrement())
  ordersAdmin   Order[]   @relation("adminOrders")
  ordersUser    Order[]   @relation("userOrders")

  @@map("users")
}

model verificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Order {
  id          Int         @id @default(autoincrement())
  name        String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  description String
  quantity    Int
  price       Float
  user_id     String
  admin_id    String
  status      StatusOrder @default(TODO)
  admin       User        @relation("adminOrders", fields: [admin_id], references: [id])
  user        User        @relation("userOrders", fields: [user_id], references: [id])

  @@map("orders")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  inactive
  active
}

enum StatusOrder {
  TODO        @map("Przyjęto zamówienie")
  PROJECT     @map("W fazie projektu")
  IN_PROGRESS @map("Trwa proces druku")
  DONE        @map("Druk gotowy - czekaj na kontakt")
}
